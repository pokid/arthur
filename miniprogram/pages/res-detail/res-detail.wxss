Page {
  font-size: 30rpx;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image {
  display: block;
}

.resource-label {
  color: rgba(16, 16, 16, 0.8);
  background-color: rgba(187, 187, 187, 0.3);
  padding: 15rpx 35rpx;
}

.resource-info-wrapper {
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 50rpx;
  padding: 15rpx 35rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.resource-info-label {
  width: 25%;
}

.resource-info-remarks {
  background-color: #fff;
  padding: 20rpx 35rpx;
  min-height: 100rpx;
}

.resource-order-button-wrapper {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
}

.resource-order-button {
  font-size: 30rpx;
  color: #fff;
  background-color: rgba(63, 81, 181, 0.8);
  width: 85%;
  height: 55rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.resource-undo-button {
  font-size: 30rpx;
  color: #fff;
  background-color: rgba(1, 9, 2, 0.507);
  width: 85%;
  height: 55rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
