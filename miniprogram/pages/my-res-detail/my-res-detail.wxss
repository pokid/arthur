Page {
  font-size: 30rpx;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


input {
  min-width: 75%;
}

.resource-label {
  color: rgba(16, 16, 16, 0.8);
  background-color: rgba(187, 187, 187, 0.3);
  padding: 15rpx 35rpx;
}

.resource-image-button {
  background-color: #fff;
  border: 1rpx solid rgba(16, 16, 16, 0.3);
  padding: 15rpx 25rpx;
  position: fixed;
  top: 100rpx;
  right: 40rpx;
}

.resource-info-wrapper {
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 50rpx;
  padding: 15rpx 35rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.resource-info-label {
  width: 150rpx;
}

.resource-info-remarks {
  background-color: #fff;
  width: 700rpx;
  padding: 20rpx 35rpx;
  height: 100rpx;
}

.resource-button-wrapper {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-evenly;
}

.resource-save-button {
  font-size: 30rpx;
  color: #fff;
  background-color: rgba(63, 81, 181, 0.8);
  width: 45%;
  height: 55rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.resource-cancel-button {
  font-size: 30rpx;
  color: #fff;
  background-color: rgba(229, 28, 35, 0.8);
  width: 45%;
  height: 55rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
