Page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.my-info {
  height: 200rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.my-info-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.my-info-avatar::after {
  border: none;
}

.my-info-nickname {
  font-size: 36rpx;
  background-color: white;
  background-size: cover;
  margin-left: 150rpx;
}

.my-info-nickname::after {
  border: none;
}

.my-wrapper {
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 50rpx;
  padding: 15rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.my-arrow {
  width: 25rpx;
  height: 25rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.8);
  border-right: 2rpx solid rgba(0, 0, 0, 0.8);
  transform: rotate(45deg);
}
