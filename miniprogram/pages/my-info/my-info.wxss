Page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.my-info-wrapper {
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 50rpx;
  padding: 15rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.my-info-avatar-label {
  align-self: center;
}

.my-info-avatar {
  width: 150rpx;
  height: 150rpx;
  /* margin: 40rpx; */
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  align-self: center;
}
